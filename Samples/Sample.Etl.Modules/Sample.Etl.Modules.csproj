<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="FizzCode.EtLast" Version="8.1.11" />
    <PackageReference Include="FizzCode.EtLast.AdoNet" Version="8.1.11" />
    <PackageReference Include="FizzCode.EtLast.AdoNet.MsSql" Version="8.1.11" />
    <PackageReference Include="FizzCode.EtLast.EPPlus" Version="8.1.11" />
    <PackageReference Include="FizzCode.EtLast.Hosting" Version="8.1.11" />
    <PackageReference Include="FizzCode.EtLast.LocalFiles" Version="8.1.11" />
